---
interface Props {
	title?: string;
}

const { title = 'The Kick Enterprise Club' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content="A political home for business leaders aligned with Democratic outcomes â€” and ready to invest in the infrastructure that makes them possible." />
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	*, *::before, *::after {
		box-sizing: border-box;
	}

	html {
		scroll-behavior: smooth;
	}

	body {
		margin: 0;
		font-family: Georgia, 'Times New Roman', Times, serif;
		color: #1a1a1a;
		background: #ffffff;
		line-height: 1.7;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}

	/* Sans-serif for UI elements */
	button, .btn, .nav-link, .label, .tier-name {
		font-family: 'Inter', system-ui, -apple-system, sans-serif;
	}
</style>
