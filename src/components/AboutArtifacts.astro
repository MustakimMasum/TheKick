---
// About Section Artifacts - Pass the artifact type as prop
const { type, align = 'right' }: { type: 'building' | 'who' | 'why' | 'believe' | 'origin', align?: 'left' | 'right' } = Astro.props;

// Color palette for each artifact type - all complementing the brand blue (#2d4585)
const colors = {
	building: '#2d4585',    // Brand Blue
	who: '#1a9b8c',        // Teal - complementary, represents community
	why: '#c97a4a',        // Warm Coral - represents passion/purpose
	believe: '#2a5a9b',    // Deep Blue - represents trust/principles
	origin: '#5a8a3a',     // Forest Green - represents growth/roots
};
---

<div class={`about-artifact about-artifact-${type} about-artifact-${align}`}>
	{type === 'building' && (
		<svg viewBox="0 0 400 350" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
			<defs>
				<linearGradient id="building-grad" x1="0%" y1="0%" x2="100%" y2="100%">
					<stop offset="0%" style={`stop-color:${colors.building};stop-opacity:0.5`} />
					<stop offset="100%" style={`stop-color:${colors.building};stop-opacity:0.3`} />
				</linearGradient>
			</defs>
			<!-- Foundation/Base -->
			<rect x="50" y="280" width="300" height="8" fill={colors.building} opacity="0.7"/>
			<!-- Pillars/Columns -->
			<g fill="url(#building-grad)">
				<rect x="80" y="100" width="30" height="180" rx="2"/>
				<rect x="130" y="120" width="25" height="160" rx="2"/>
				<rect x="175" y="80" width="35" height="200" rx="2"/>
				<rect x="230" y="110" width="28" height="170" rx="2"/>
				<rect x="275" y="130" width="30" height="150" rx="2"/>
			</g>
			<!-- Connecting beam -->
			<rect x="70" y="90" width="260" height="6" fill={colors.building} opacity="0.8"/>
			<!-- Nodes/circles at top -->
			<g fill={colors.building} opacity="0.9">
				<circle cx="95" cy="75" r="10"/>
				<circle cx="142" cy="75" r="8"/>
				<circle cx="192" cy="70" r="12"/>
				<circle cx="244" cy="75" r="9"/>
				<circle cx="290" cy="75" r="10"/>
			</g>
			<!-- Connection lines -->
			<g stroke={colors.building} stroke-width="1.5" opacity="0.6">
				<line x1="95" y1="75" x2="192" y2="70"/>
				<line x1="192" y1="70" x2="290" y2="75"/>
				<line x1="142" y1="75" x2="192" y2="70"/>
				<line x1="244" y1="75" x2="192" y2="70"/>
			</g>
		</svg>
	)}

	{type === 'who' && (
		<svg viewBox="0 0 400 350" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
			<defs>
				<linearGradient id="who-grad" x1="0%" y1="0%" x2="100%" y2="100%">
					<stop offset="0%" style={`stop-color:${colors.who};stop-opacity:0.5`} />
					<stop offset="100%" style={`stop-color:${colors.who};stop-opacity:0.3`} />
				</linearGradient>
			</defs>
			<!-- Central circle - representing community -->
			<circle cx="200" cy="175" r="80" fill="url(#who-grad)"/>
			<!-- Person figures - arranged in circle (smaller) -->
			<g fill={colors.who}>
				<!-- Top person -->
				<circle cx="200" cy="110" r="8" opacity="0.9"/>
				<ellipse cx="200" cy="125" rx="12" ry="6" opacity="0.7"/>
				<!-- Right person -->
				<circle cx="275" cy="165" r="8" opacity="0.9"/>
				<ellipse cx="275" cy="180" rx="12" ry="6" opacity="0.7"/>
				<!-- Bottom right -->
				<circle cx="250" cy="240" r="8" opacity="0.9"/>
				<ellipse cx="250" cy="255" rx="12" ry="6" opacity="0.7"/>
				<!-- Bottom left -->
				<circle cx="150" cy="240" r="8" opacity="0.9"/>
				<ellipse cx="150" cy="255" rx="12" ry="6" opacity="0.7"/>
				<!-- Left person -->
				<circle cx="125" cy="165" r="8" opacity="0.9"/>
				<ellipse cx="125" cy="180" rx="12" ry="6" opacity="0.7"/>
			</g>
			<!-- Connection lines -->
			<g stroke={colors.who} stroke-width="1.5" opacity="0.6">
				<line x1="200" y1="175" x2="200" y2="110"/>
				<line x1="200" y1="175" x2="275" y2="165"/>
				<line x1="200" y1="175" x2="250" y2="240"/>
				<line x1="200" y1="175" x2="150" y2="240"/>
				<line x1="200" y1="175" x2="125" y2="165"/>
			</g>
			<!-- Outer ring -->
			<circle cx="200" cy="175" r="120" fill="none" stroke={colors.who} stroke-width="1.5" opacity="0.5"/>
		</svg>
	)}

	{type === 'why' && (
		<svg viewBox="0 0 400 350" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
			<defs>
				<linearGradient id="why-grad" x1="0%" y1="100%" x2="0%" y2="0%">
					<stop offset="0%" style={`stop-color:${colors.why};stop-opacity:0.3`} />
					<stop offset="100%" style={`stop-color:${colors.why};stop-opacity:0.6`} />
				</linearGradient>
			</defs>
			<!-- Mountain/purpose shape -->
			<polygon points="200,50 320,300 80,300" fill="url(#why-grad)"/>
			<path d="M200 50 L200 300" stroke={colors.why} stroke-width="1.5" opacity="0.5"/>
			<!-- Summit marker -->
			<circle cx="200" cy="50" r="8" fill={colors.why} opacity="0.9"/>
			<circle cx="200" cy="50" r="15" fill="none" stroke={colors.why} stroke-width="1.5" opacity="0.7"/>
			<!-- Path steps -->
			<g fill={colors.why} opacity="0.7">
				<rect x="185" y="100" width="30" height="6"/>
				<rect x="180" y="140" width="40" height="6"/>
				<rect x="175" y="180" width="50" height="6"/>
				<rect x="170" y="220" width="60" height="6"/>
				<rect x="165" y="260" width="70" height="6"/>
			</g>
			<!-- Side peaks - smaller goals -->
			<polygon points="100,150 150,300 50,300" fill={colors.why} opacity="0.25"/>
			<polygon points="300,150 350,300 250,300" fill={colors.why} opacity="0.25"/>
		</svg>
	)}

	{type === 'believe' && (
		<svg viewBox="0 0 400 350" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
			<defs>
				<radialGradient id="believe-glow" cx="50%" cy="50%" r="50%">
					<stop offset="0%" style={`stop-color:${colors.believe};stop-opacity:0.4`} />
					<stop offset="100%" style={`stop-color:${colors.believe};stop-opacity:0.05`} />
				</radialGradient>
			</defs>
			<!-- Central glow -->
			<circle cx="200" cy="175" r="100" fill="url(#believe-glow)"/>
			<!-- Core circle -->
			<circle cx="200" cy="175" r="30" fill={colors.believe} opacity="0.8"/>
			<!-- Concentric circles - expanding beliefs -->
			<g fill="none" stroke={colors.believe} opacity="0.6">
				<circle cx="200" cy="175" r="50" stroke-width="1.5"/>
				<circle cx="200" cy="175" r="75" stroke-width="1.5"/>
				<circle cx="200" cy="175" r="100" stroke-width="1.5"/>
			</g>
			<!-- Radial points - belief pillars -->
			<g fill={colors.believe} opacity="0.85">
				<circle cx="200" cy="75" r="6"/>
				<circle cx="287" cy="110" r="6"/>
				<circle cx="325" cy="175" r="6"/>
				<circle cx="287" cy="240" r="6"/>
				<circle cx="200" cy="275" r="6"/>
				<circle cx="113" cy="240" r="6"/>
				<circle cx="75" cy="175" r="6"/>
				<circle cx="113" cy="110" r="6"/>
			</g>
			<!-- Connection lines -->
			<g stroke={colors.believe} stroke-width="1.5" opacity="0.5">
				<line x1="200" y1="175" x2="200" y2="75"/>
				<line x1="200" y1="175" x2="287" y2="110"/>
				<line x1="200" y1="175" x2="325" y2="175"/>
				<line x1="200" y1="175" x2="287" y2="240"/>
				<line x1="200" y1="175" x2="200" y2="275"/>
				<line x1="200" y1="175" x2="113" y2="240"/>
				<line x1="200" y1="175" x2="75" y2="175"/>
				<line x1="200" y1="175" x2="113" y2="110"/>
			</g>
		</svg>
	)}

	{type === 'origin' && (
		<svg viewBox="0 0 400 350" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
			<defs>
				<linearGradient id="origin-grad" x1="0%" y1="100%" x2="100%" y2="0%">
					<stop offset="0%" style={`stop-color:${colors.origin};stop-opacity:0.5`} />
					<stop offset="100%" style={`stop-color:${colors.origin};stop-opacity:0.25`} />
				</linearGradient>
			</defs>
			<!-- Tree/roots metaphor -->
			<!-- Trunk -->
			<path d="M185 300 L185 200 Q200 180 215 200 L215 300 Z" fill={colors.origin} opacity="0.7"/>
			<!-- Branches -->
			<g stroke={colors.origin} stroke-width="3.5" fill="none" opacity="0.65">
				<path d="M200 200 Q200 150 160 130"/>
				<path d="M200 200 Q200 160 240 140"/>
				<path d="M200 180 Q200 140 140 110"/>
				<path d="M200 180 Q200 150 260 120"/>
			</g>
			<!-- Leaves/nodes -->
			<g fill={colors.origin} opacity="0.85">
				<circle cx="160" cy="130" r="12"/>
				<circle cx="240" cy="140" r="10"/>
				<circle cx="140" cy="110" r="8"/>
				<circle cx="260" cy="120" r="9"/>
			</g>
			<!-- Roots -->
			<g stroke={colors.origin} stroke-width="2.5" fill="none" opacity="0.5">
				<path d="M190 300 Q180 320 160 330"/>
				<path d="M190 300 Q200 330 200 345"/>
				<path d="M210 300 Q220 320 240 330"/>
				<path d="M210 300 Q200 335 200 350"/>
			</g>
			<!-- Ground line -->
			<line x1="100" y1="300" x2="300" y2="300" stroke={colors.origin} stroke-width="2.5" opacity="0.7"/>
		</svg>
	)}
</div>

<style>
	.about-artifact {
		width: 100%;
		max-width: 400px;
		display: block;
		margin: 32px 0;
	}

	.about-artifact svg {
		width: 100%;
		height: auto;
	}

	/* Tablet and up - alternating layout with margins */
	@media (min-width: 768px) {
		.about-artifact {
			margin: 0;
		}

		.about-artifact-right {
			margin-left: 48px;
		}

		.about-artifact-left {
			margin-right: 48px;
		}
	}
</style>
