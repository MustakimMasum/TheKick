---
// Header with sticky navigation
import theKickLogo from '@/assets/THEKICK.png';

const navLinks = [
	{ href: '/#what-we-build', text: 'About' },
	{ href: '/#engagement', text: 'Engagement' },
	{ href: '/#policy', text: 'Policy' },
	{ href: '/#endorsements', text: 'Endorsements' },
	{ href: '/#events', text: 'Events' },
];

const resourcesLinks = [
	{ href: '/articles', text: 'Articles' },
	{ href: '/links', text: 'Links' },
];
---

<header class="header">
	<div class="container">
		<div class="header-inner">
			<a href="/" class="logo">
				<img src={theKickLogo.src} alt="The Kick" class="logo-icon" />
				<div class="logo-text">
					<span class="logo-line">THE KICK</span>
					<span class="logo-line">Enterprise Club</span>
				</div>
			</a>
			
			<nav class="nav" role="navigation">
				<ul class="nav-list">
					{navLinks.map((link) => (
						<li>
							<a href={link.href} class="nav-link">{link.text}</a>
						</li>
					))}
					<li class="nav-item-dropdown">
						<button class="nav-link dropdown-toggle" aria-expanded="false" aria-haspopup="true">
							Resources
							<svg class="dropdown-icon" width="10" height="6" viewBox="0 0 10 6" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M1 1L5 5L9 1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
						</button>
						<ul class="dropdown-menu">
							{resourcesLinks.map((link) => (
								<li>
									<a href={link.href} class="dropdown-link">{link.text}</a>
								</li>
							))}
						</ul>
					</li>
				</ul>
			</nav>

			<a href="#membership" class="btn btn-small btn-outline">Join Now</a>

			<!-- Mobile hamburger button -->
			<button class="hamburger" id="hamburger" aria-label="Toggle menu" aria-expanded="false">
				<span></span>
				<span></span>
				<span></span>
			</button>
		</div>
	</div>

	<!-- Mobile menu -->
	<div class="mobile-menu" id="mobileMenu">
		<nav class="mobile-nav" role="navigation">
			<ul class="mobile-nav-list">
				{navLinks.map((link) => (
					<li>
						<a href={link.href} class="mobile-nav-link">{link.text}</a>
					</li>
				))}
				<li>
					<button class="mobile-nav-toggle" aria-expanded="false">
						Resources
						<svg class="mobile-dropdown-icon" width="10" height="6" viewBox="0 0 10 6" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M1 1L5 5L9 1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
					</button>
					<ul class="mobile-dropdown-list">
						{resourcesLinks.map((link) => (
							<li>
								<a href={link.href} class="mobile-nav-link mobile-nav-sublink">{link.text}</a>
							</li>
						))}
					</ul>
				</li>
				<li>
					<a href="https://thekickdemocraticenterpriceclub.app.neoncrm.com/forms/kick-donation-form" class="mobile-nav-cta" target="_blank" rel="noopener noreferrer">Join Now</a>
				</li>
			</ul>
		</nav>
	</div>
</header>

<style>
	.header {
		position: sticky;
		top: 0;
		z-index: 100;
		background: #ffffff;
		border-bottom: 1px solid #e5e5e5;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 24px;
	}

	.header-inner {
		display: flex;
		align-items: center;
		justify-content: center;
		height: 64px;
		gap: 96px;
	}

	.logo {
		display: flex;
		align-items: center;
		gap: 14px;
		text-decoration: none;
		white-space: nowrap;
	}

	.logo-icon {
		height: 48px;
		width: auto;
		display: block;
	}

	.logo-text {
		display: flex;
		flex-direction: column;
		line-height: 1.1;
	}

	.logo-line {
		font-family: 'Montserrat', sans-serif;
		font-size: 20px;
		font-weight: 600;
		color: #1a1a1a;
		letter-spacing: 0.02em;
	}

	.nav {
		flex: 1;
		display: none;
	}

	.nav-list {
		display: flex;
		list-style: none;
		margin: 0;
		padding: 0;
		gap: 32px;
	}

	.nav-link {
		font-size: 16px;
		font-weight: 500;
		color: #666;
		text-decoration: none;
		transition: color 0.2s ease;
		white-space: nowrap;
	}

	.nav-link:hover {
		color: #4a5cb8;
	}

	/* Dropdown */
	.nav-item-dropdown {
		position: relative;
	}

	.dropdown-toggle {
		display: inline-flex;
		align-items: center;
		gap: 6px;
		background: none;
		border: none;
		cursor: pointer;
	}

	.dropdown-icon {
		transition: transform 0.2s ease;
	}

	.dropdown-toggle:hover .dropdown-icon {
		transform: translateY(2px);
	}

	.nav-item-dropdown:hover .dropdown-menu,
	.dropdown-toggle:focus + .dropdown-menu,
	.dropdown-menu:hover {
		opacity: 1;
		visibility: visible;
		transform: translateY(0);
	}

	.dropdown-menu {
		position: absolute;
		top: 100%;
		left: 0;
		min-width: 160px;
		padding: 8px 0;
		background: #ffffff;
		border: 1px solid #e5e5e5;
		border-radius: 4px;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
		opacity: 0;
		visibility: hidden;
		transform: translateY(8px);
		transition: opacity 0.2s ease, transform 0.2s ease, visibility 0.2s;
		list-style: none;
		z-index: 200;
	}

	.dropdown-link {
		display: block;
		padding: 10px 20px;
		font-size: 15px;
		font-weight: 500;
		color: #1a1a1a;
		text-decoration: none;
		transition: background 0.2s ease, color 0.2s ease;
	}

	.dropdown-link:hover {
		background: #f5f5f5;
		color: #4a5cb8;
	}

	.btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		font-size: 16px;
		font-weight: 500;
		text-decoration: none;
		cursor: pointer;
		transition: all 0.2s ease;
		white-space: nowrap;
	}

	.btn-small {
		padding: 12px 24px;
	}

	.btn-primary {
		background: #4a5cb8;
		color: #ffffff;
		border: 2px solid #4a5cb8;
		border-radius: 2px;
	}

	.btn-primary:hover {
		background: #22386d;
		border-color: #22386d;
	}

	.btn-outline {
		background: transparent;
		color: #4a5cb8;
		border: 2px solid #4a5cb8;
		border-radius: 2px;
	}

	.btn-outline:hover {
		background: #4a5cb8;
		color: #ffffff;
	}

	/* Hamburger button */
	.hamburger {
		display: none;
		flex-direction: column;
		justify-content: center;
		gap: 5px;
		width: 44px;
		height: 44px;
		background: transparent;
		border: none;
		cursor: pointer;
		padding: 0;
	}

	.hamburger span {
		display: block;
		width: 24px;
		height: 2px;
		background: #1a1a1a;
		transition: all 0.3s ease;
		border-radius: 2px;
	}

	.hamburger:hover span {
		background: #4a5cb8;
	}

	.hamburger[aria-expanded="true"] span:nth-child(1) {
		transform: rotate(45deg) translate(5px, 6px);
	}

	.hamburger[aria-expanded="true"] span:nth-child(2) {
		opacity: 0;
	}

	.hamburger[aria-expanded="true"] span:nth-child(3) {
		transform: rotate(-45deg) translate(5px, -6px);
	}

	/* Mobile menu */
	.mobile-menu {
		position: absolute;
		top: 100%;
		left: 0;
		right: 0;
		background: #ffffff;
		border-bottom: 1px solid #e5e5e5;
		max-height: 0;
		overflow: hidden;
		transition: max-height 0.3s ease;
	}

	.mobile-menu.open {
		max-height: 500px;
	}

	.mobile-nav-list {
		list-style: none;
		margin: 0;
		padding: 0;
	}

	.mobile-nav-link,
	.mobile-nav-cta {
		display: block;
		padding: 16px 24px;
		font-family: 'Montserrat', sans-serif;
		font-size: 16px;
		font-weight: 500;
		text-decoration: none;
		color: #1a1a1a;
		border-bottom: 1px solid #f0f0f0;
		transition: all 0.2s ease;
	}

	.mobile-nav-link:hover {
		background: #f9f9f9;
		color: #4a5cb8;
	}

	.mobile-nav-cta {
		background: #4a5cb8;
		color: #ffffff;
		text-align: center;
		margin-top: 8px;
		border-radius: 2px;
		border-bottom: none;
	}

	.mobile-nav-cta:hover {
		background: #22386d;
		color: #ffffff;
	}

	/* Mobile dropdown */
	.mobile-nav-toggle {
		display: flex;
		align-items: center;
		justify-content: space-between;
		width: 100%;
		padding: 16px 24px;
		font-family: 'Montserrat', sans-serif;
		font-size: 16px;
		font-weight: 500;
		color: #1a1a1a;
		background: none;
		border: none;
		border-bottom: 1px solid #f0f0f0;
		cursor: pointer;
		transition: background 0.2s ease;
	}

	.mobile-nav-toggle:hover {
		background: #f9f9f9;
	}

	.mobile-dropdown-icon {
		transition: transform 0.3s ease;
	}

	.mobile-nav-toggle[aria-expanded="true"] .mobile-dropdown-icon {
		transform: rotate(180deg);
	}

	.mobile-dropdown-list {
		max-height: 0;
		overflow: hidden;
		transition: max-height 0.3s ease;
		list-style: none;
		padding: 0;
	}

	.mobile-dropdown-list.open {
		max-height: 200px;
	}

	.mobile-nav-sublink {
		padding-left: 40px;
		font-size: 15px;
		background: #f9f9f9;
	}

	/* Tablet and up */
	@media (min-width: 768px) {
		.nav {
			display: block;
		}

		.container {
			padding: 0 48px;
		}
	}

	@media (min-width: 1024px) {
		.container {
			padding: 0 64px;
		}

		.header-inner {
			height: 100px;
		}
	}

	/* Mobile */
	@media (max-width: 767px) {
		.hamburger {
			display: flex;
		}

		.header-inner {
			justify-content: space-between;
		}

		.btn {
			display: none;
		}
	}
</style>

<script>
	function initMobileMenu() {
		const hamburger = document.getElementById('hamburger');
		const mobileMenu = document.getElementById('mobileMenu');
		const mobileLinks = document.querySelectorAll('.mobile-nav-link, .mobile-nav-cta');
		const mobileDropdownToggles = document.querySelectorAll('.mobile-nav-toggle');

		if (!hamburger || !mobileMenu) return;

		// Non-null assertions: we've verified these exist above
		const menu = mobileMenu!;
		const burger = hamburger!;

		function toggleMenu() {
			const isOpen = menu.classList.toggle('open');
			burger.setAttribute('aria-expanded', String(isOpen));
			document.body.style.overflow = isOpen ? 'hidden' : '';
		}

		function closeMenu() {
			menu.classList.remove('open');
			burger.setAttribute('aria-expanded', 'false');
			document.body.style.overflow = '';
		}

		burger.addEventListener('click', toggleMenu);

		// Mobile dropdown toggles
		mobileDropdownToggles.forEach(toggle => {
			toggle.addEventListener('click', (e) => {
				e.stopPropagation();
				const isExpanded = toggle.getAttribute('aria-expanded') === 'true';
				toggle.setAttribute('aria-expanded', String(!isExpanded));

				const dropdownList = toggle.nextElementSibling as HTMLElement;
				if (dropdownList && dropdownList.classList.contains('mobile-dropdown-list')) {
					dropdownList.classList.toggle('open');
				}
			});
		});

		// Close menu when clicking a link
		mobileLinks.forEach(link => {
			link.addEventListener('click', closeMenu);
		});

		// Close menu when clicking outside
		document.addEventListener('click', (e) => {
			const target = e.target as Node;
			if (target && !burger.contains(target) && !menu.contains(target)) {
				closeMenu();
			}
		});
	}

	initMobileMenu();
</script>
