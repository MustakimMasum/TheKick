---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Links - THE KICK Enterprise Club">
	<Header />

	<main>
		<section class="links-section">
			<div class="container">
				<p class="coming-soon">Check back soon for curated resources and links.</p>
			</div>
		</section>
	</main>

	<Footer />
</Layout>

<style>
	.links-section {
		padding: 120px 0;
		min-height: 400px;
	}

	.links-section .container {
		max-width: 1080px;
		margin: 0 auto;
		padding-left: 24px;
		padding-right: 24px;
	}

	.coming-soon {
		font-family: 'Montserrat', sans-serif;
		font-size: 18px;
		color: #666;
		text-align: center;
	}

	@media (min-width: 768px) {
		.links-section .container {
			padding-left: 48px;
			padding-right: 48px;
		}
	}

	@media (min-width: 1024px) {
		.links-section .container {
			padding-left: 64px;
			padding-right: 64px;
		}
	}
</style>
