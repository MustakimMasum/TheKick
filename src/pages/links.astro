---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Links - THE KICK Enterprise Club">
	<Header />

	<main>
		<section class="links-section">
			<div class="container">
				<aside class="links-sidebar">
					<nav class="links-nav">
						<h3 class="sidebar-title">Links</h3>
						<ul class="links-list">
							<li>
								<div class="link-item">
									<span class="link-title">Find Your Representatives</span>
									<span class="link-meta">Texas Legislature Online</span>
								</div>
								<p class="link-description">
									To easily find out who represents you at the state and federal level please click here and enter your home address (yes...it is that easy!)
								</p>
								<a href="https://wrm.capitol.texas.gov/home" class="link-button" target="_blank" rel="noopener noreferrer">
									Visit Site
								</a>
							</li>
						</ul>
					</nav>
				</aside>
			</div>
		</section>
	</main>

	<Footer />
</Layout>

<style>
	.links-section {
		padding: 60px 0;
	}

	.links-section .container {
		max-width: 1200px;
		margin: 0 auto;
		padding-left: 24px;
		padding-right: 24px;
	}

	.links-sidebar {
		flex-shrink: 0;
	}

	.sidebar-title {
		font-family: 'Montserrat', sans-serif;
		font-size: 14px;
		font-weight: 600;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		color: #666;
		margin: 0 0 20px 0;
	}

	.links-list {
		list-style: none;
		margin: 0;
		padding: 0;
	}

	.links-list li {
		padding: 16px 0;
		border-bottom: 1px solid #e5e5e5;
	}

	.links-list li:first-child {
		padding-top: 0;
	}

	.links-list li:last-child {
		border-bottom: none;
	}

	.link-item {
		display: flex;
		flex-direction: column;
		margin-bottom: 12px;
	}

	.link-title {
		font-family: 'Montserrat', sans-serif;
		font-size: 15px;
		font-weight: 500;
		color: #1a1a1a;
		margin-bottom: 4px;
	}

	.link-meta {
		font-size: 13px;
		color: #999;
	}

	.link-description {
		font-family: 'Georgia', 'Times New Roman', Times, serif;
		font-size: 15px;
		line-height: 1.6;
		color: #666;
		margin: 0 0 12px 0;
	}

	.link-button {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		font-family: 'Montserrat', sans-serif;
		font-size: 15px;
		font-weight: 500;
		text-decoration: none;
		cursor: pointer;
		transition: all 0.2s ease;
		border-radius: 2px;
		padding: 14px 28px;
		background: transparent;
		color: #3105e9;
		border: 2px solid #3105e9;
	}

	.link-button:hover {
		background: #3105e9;
		color: #ffffff;
	}

	@media (min-width: 768px) {
		.links-section {
			padding: 80px 0;
		}

		.links-section .container {
			padding-left: 48px;
			padding-right: 48px;
		}
	}

	@media (min-width: 1024px) {
		.links-section .container {
			padding-left: 64px;
			padding-right: 64px;
		}
	}
</style>
