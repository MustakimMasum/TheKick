---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Links - THE KICK Enterprise Club">
	<Header />

	<main>
		<section class="links-section">
			<div class="container">
				<h1 class="page-title">Links</h1>
				<div class="links-list">
					<div class="link-item">
						<p class="link-description">
							To easily find out who represents you at the state and federal level please click here and enter your home address (yes...it is that easy!)
						</p>
						<a href="https://wrm.capitol.texas.gov/home" class="link-button" target="_blank" rel="noopener noreferrer">
							Find Your Representatives
						</a>
					</div>
				</div>
			</div>
		</section>
	</main>

	<Footer />
</Layout>

<style>
	.links-section {
		padding: 80px 0;
		min-height: 400px;
	}

	.links-section .container {
		max-width: 800px;
		margin: 0 auto;
		padding-left: 24px;
		padding-right: 24px;
	}

	.page-title {
		font-family: 'Montserrat', sans-serif;
		font-size: clamp(28px, 5vw, 36px);
		font-weight: 700;
		color: #1a1a1a;
		margin: 0 0 40px 0;
	}

	.links-list {
		display: flex;
		flex-direction: column;
		gap: 32px;
	}

	.link-item {
		padding: 24px;
		border: 1px solid #e5e5e5;
		border-radius: 4px;
		transition: border-color 0.2s ease;
	}

	.link-item:hover {
		border-color: #3105e9;
	}

	.link-description {
		font-family: 'Georgia', 'Times New Roman', Times, serif;
		font-size: 16px;
		line-height: 1.7;
		color: #1a1a1a;
		margin: 0 0 16px 0;
	}

	.link-button {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		font-family: 'Montserrat', sans-serif;
		font-size: 14px;
		font-weight: 500;
		text-decoration: none;
		cursor: pointer;
		transition: all 0.2s ease;
		border-radius: 2px;
		padding: 12px 24px;
		background: transparent;
		color: #3105e9;
		border: 2px solid #3105e9;
	}

	.link-button:hover {
		background: #3105e9;
		color: #ffffff;
	}

	@media (min-width: 768px) {
		.links-section {
			padding: 100px 0;
		}

		.links-section .container {
			padding-left: 48px;
			padding-right: 48px;
		}

		.link-item {
			padding: 28px 32px;
		}
	}

	@media (min-width: 1024px) {
		.links-section .container {
			padding-left: 64px;
			padding-right: 64px;
		}
	}
</style>
